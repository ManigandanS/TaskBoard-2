<div class="tab-pane fade active in" id="signin" data-bind="with: signIn">
    <form class="form-horizontal">
        <fieldset>
            <div class="control-group" data-bind="with: user">
                <div class="controls">
                    <input type="text"
                           class="form-control input-medium"
                           placeholder="Login or E-mail"
                           data-bind="textInput: login"
                           required>
                </div>
            </div>
            <div class="control-group" data-bind="with: user">
                <label class="control-label" for="passwordinput">Password:</label>
                <div class="controls">
                    <input type="password"
                           class="form-control input-medium"
                           placeholder="Password"
                           data-bind="textInput: password"
                           required>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button class="btn btn-success" 
                            data-bind="enable: enabled, click:signIn">
                        Sign In
                    </button>
                </div>
            </div>
        </fieldset>
    </form>
</div>