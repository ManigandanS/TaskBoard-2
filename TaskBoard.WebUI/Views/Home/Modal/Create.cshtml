<div class="modal fade bs-modal-create"
     id="createModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="mySmallModalLabel"
     aria-hidden="true"
     data-bind="with: create">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <div class="modal-body">
                    <form class="form-horizontal">
                        <fieldset>
                            <legend>New Task</legend>
                            <div class="form-group">
                                <div class="controls">
                                    <label class="control-label">Title:</label>
                                    <input type="text"
                                           class="form-control input-medium"
                                           placeholder="Title"
                                           data-bind="textInput: title">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="controls">
                                    <label class="control-label">Description:</label>
                                    <textarea class="form-control autosize"
                                              placeholder="Description..."
                                              data-bind="textInput: desc"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="controls">
                                    <label class="control-label">Start Date:</label>
                                    <input type="text"
                                           class="form-control input-medium datepicker"
                                           placeholder="Title"
                                           data-bind="textInput: startDate">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="controls">
                                    <label class="control-label">Due Date:</label>
                                    <input type="text"
                                           class="form-control input-medium datepicker"
                                           placeholder="Title"
                                           data-bind="textInput: dueDate">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="controls">
                                    <button class="btn btn-success"
                                            data-bind="enable: enabled, click: create">
                                        Create
                                    </button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <center>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </center>
            </div>
        </div>
    </div>
</div>
