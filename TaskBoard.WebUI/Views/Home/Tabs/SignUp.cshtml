<div class="tab-pane fade" id="signUp"
     data-bind="with: signUp">
    <div class="modal-body">
        <form class="form-horizontal" data-bind="with: user">
            <fieldset>
                <div class="form-group">
                    <input class="form-control input-large"
                           type="text"
                           placeholder="Username"
                           data-bind="textInput: username"
                           required>
                </div>
                <div class="form-group">
                    <input class="form-control input-large"
                           type="text"
                           placeholder="Email"
                           data-bind="textInput: email"
                           required>
                </div>
                <div class="form-group">
                    <input class="form-control input-large"
                           type="text"
                           placeholder="Full name"
                           data-bind="textInput: fullName"
                           required>
                </div>
                <div class="form-group">
                    <input class="form-control input-large"
                           type="password"
                           placeholder="Pasword"
                           data-bind="textInput: password"
                           required>
                </div>
                <div class="form-group">
                    <input class="form-control input-large"
                           type="password"
                           placeholder="Confirm password"
                           data-bind="textInput: confirm"
                           required>
                </div>
                <div class="form-group">
                    <div class="controls">
                        <button class="btn btn-success"
                                data-bind="click: $parent.signUp, enable: $parent.isValid">
                            Sign Up
                        </button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>