<div data-bind="with: edit">
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <h5 class="panel-title">Details</h5>
        </div>
        <div class="panel-body">
            <form class="well">
                <fieldset>
                    <legend>Edit task</legend>
                    <div class="form-group">
                        <label class="control-label">Title:</label>
                        <input class="form-control"
                               data-bind="textInput: title" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Description:</label>
                        <textarea class="form-control"
                                  data-bind="textInput: desc"></textarea>
                    </div>
                    <input type="button" class="btn btn-primary btn-sm" value="Save">
                </fieldset>
            </form>
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h5 class="panel-title">Coments</h5>
                </div>
                <div class="panel-body">
                    <div class="well">
                        <form>
                            <fieldset>
                                <legend>Add comment:</legend>
                                <div class="form-group">
                                    <textarea class="form-control"
                                              data-bind="textInput: comment"></textarea>
                                </div>
                                <button class="btn btn-primary btn-sm"
                                        data-bind="click: addComment, disable: emptyComment">
                                    Add
                                </button>
                            </fieldset>
                        </form>
                    </div>
                    <div class="well">Comment</div>
                </div>
            </div>
        </div>
    </div>
</div>
